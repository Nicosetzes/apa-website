<%- include('./partials/header')-%>
    <main>
        <% if(finalMatchups.length> 0){ %>
            <div>Hola, hay emparejamientos</div>
            <% } else{ %>
                <div>Hola, NO hay emparejamientos</div>
                <div>¿Desea <a href="/upload-games">cargar un partido</a>?</div>
                <% } %>

                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">Mano a mano</th>
                                <th scope="col">PJ</th>
                                <th scope="col">PG (J1)</th>
                                <th scope="col">PE</th>
                                <th scope="col">PG (J2)</th>
                                <th scope="col">GF (J1)</th>
                                <th scope="col">GF (J2)</th>
                                <th scope="col">DIF</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for (i=0; i < finalMatchups.length ; i++) { %>
                                <tr>
                                    <td>
                                        <%=finalMatchups[i].matchup%>
                                    </td>
                                    <td>
                                        <%=finalMatchups[i].matches.length%>
                                    </td>
                                    <td>
                                        <%=finalMatchups[i].wonByP1%>
                                    </td>
                                    <td>
                                        <%=finalMatchups[i].draws%>
                                    </td>
                                    <td>
                                        <%=finalMatchups[i].wonByP2%>
                                    </td>
                                    <td>
                                        <%=finalMatchups[i].scoreByP1%>
                                    </td>
                                    <td>
                                        <%=finalMatchups[i].scoreByP2%>
                                    </td>
                                    <td>
                                        <%= Math.abs(finalMatchups[i].scoreByP1 - finalMatchups[i].scoreByP2)%>
                                    </td>
                                </tr>
                                <%};%>
                        </tbody>
                    </table>

                    <% if(allTournaments.length> 0){ %>
                        <ul>
                            <li class="">
                                <a href="/face-to-face">Ver estadísticas globales</a>
                            </li>
                            <%allTournaments.forEach(function(element, index) {%>
                                <li class="">
                                    <a href="/face-to-face?id=<%=element.id%>">Ver estadísticas de "
                                        <%=element.name%>"
                                    </a>
                                </li>
                                <%});%>
                        </ul>
                        <% } else{ %>
                            <div>Hola, NO hay torneos</div>
                            <div>¿Desea <a href="/create-tournament">crear un torneo</a>?</div>
                            <% } %>

                                <div class="container_matches">

                                    <%allMatches.forEach(function(element, index) {%>

                                        <div class="match">
                                            <%=element.teamP1%> (<%=element.playerP1%>) <%=element.scoreP1%> vs
                                                        <%=element.scoreP2%>
                                                            (<%=element.playerP2%>) <%=element.teamP2%>
                                        </div>

                                        <%});%>
                                </div>
    </main>
    <%- include('./partials/footer')-%>